dist: bionic

language: generic

services:
  - docker

install:
  - echo "$GITHUB_TOKEN" | docker login -u "$DOCKER_USERNAME" --password-stdin docker.pkg.github.com
  - docker pull docker.pkg.github.com/chengbilly92/OneWordFinish/auto-build:latest

script:
  - docker run -t docker.pkg.github.com/chengbilly92/OneWordFinish/auto-build:latest "$GITHUB_TOKEN"

notifications:
  email:
      recipients:
        - chengbilly92@gmail.com
      on_success: change
      on_failure: always
